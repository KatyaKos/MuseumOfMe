<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/user_header_default">

    <Button
        android:id="@+id/map_menu_button"
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/map_add_group_field"
            android:hint="Enter group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/map_add_group_button" />

        <Button
            android:id="@+id/map_add_group_button"
            android:text="Add group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />
    </RelativeLayout>

    <EditText
        android:id="@+id/map_add_place_field"
        android:hint="Enter place and click '+'"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentStart="true" />

    <ExpandableListView
        android:id="@+id/map_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

    </ExpandableListView>

</LinearLayout>