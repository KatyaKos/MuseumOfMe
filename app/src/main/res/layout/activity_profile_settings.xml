<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/user_header_default">

    <Button
        android:id="@+id/profile_sets_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Back to profile"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <EditText
                android:id="@+id/profile_sets_nickname_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="Nickname: " />

            <EditText
                android:id="@+id/profile_sets_bio_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="Bio: " />


            <EditText
                android:id="@+id/profile_sets_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="Name: " />

            <EditText
                android:id="@+id/profile_sets_birth_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="Date of birth: " />

            <EditText
                android:id="@+id/profile_sets_about_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="About me: " />

            <Button
                android:id="@+id/profile_sets_save_button"
                android:text="Save changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>