<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/user_header_default">

    <Button
        android:id="@+id/profile_sets_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/profile_sets_back"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/profile_sets_photo"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:elevation="5dp"
                    android:src="@drawable/user_photo_default"
                    android:contentDescription="@string/profile_photo"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/profile_sets_header"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:elevation="5dp"
                    android:src="@drawable/user_header_default"
                    android:contentDescription="@string/profile_header"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

                <Button
                    android:id="@+id/profile_sets_change_photo"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_sets_change_photo" />

                <Button
                    android:id="@+id/profile_sets_change_header"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_sets_change_header"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <EditText
                android:id="@+id/profile_sets_bio_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="@string/profile_sets_bio" />


            <EditText
                android:id="@+id/profile_sets_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="@string/profile_sets_name" />

            <EditText
                android:id="@+id/profile_sets_birth_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="@string/profile_sets_birth" />

            <EditText
                android:id="@+id/profile_sets_about_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#fff"
                android:clickable="true"
                android:padding="10dp"
                android:hint="@string/profile_sets_about" />

            <Button
                android:id="@+id/profile_sets_save_button"
                android:text="@string/profile_sets_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>